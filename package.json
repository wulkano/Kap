{
  "name": "kap",
  "productName": "Kap",
  "version": "3.0.0",
  "description": "The best way to record your screen",
  "license": "MIT",
  "repository": "wulkano/kap",
  "homepage": "https://getkap.co",
  "author": {
    "name": "Wulkano",
    "email": "hello@wulkano.com",
    "url": "https://wulkano.com"
  },
  "private": true,
  "main": "main/index.js",
  "scripts": {
    "test": "xo",
    "start": "electron .",
    "build": "next build renderer && next export renderer",
    "dist": "npm run build && build",
    "pack": "npm run build && build --dir",
    "postinstall": "electron-builder install-app-deps",
    "prepush": "npm run test",
    "precommit": "npm run test"
  },
  "bundle": {
    "name": "Kap"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.14",
    "@sindresorhus/do-not-disturb": "^0.2.0",
    "aperture": "^4.0.0",
    "app-root-path": "^2.0.1",
    "base64-img": "^1.0.4",
    "classnames": "^2.2.5",
    "delay": "^2.0.0",
    "electron-better-ipc": "^0.1.1",
    "electron-is-dev": "^0.3.0",
    "electron-next": "^3.1.3",
    "electron-settings": "^2.2.1",
    "electron-store": "^1.3.0",
    "electron-util": "^0.8.2",
    "execa": "^0.10.0",
    "got": "^8.3.0",
    "hide-desktop-icons": "^0.4.0",
    "husky": "^0.14.3",
    "lodash": "^4.17.5",
    "mac-windows": "^0.7.1",
    "make-dir": "^1.2.0",
    "moment": "^2.22.1",
    "nearest-normal-aspect-ratio": "^1.1.0",
    "next-compose-plugins": "^1.0.3",
    "next-optimized-images": "^1.3.0",
    "node-mac-app-icon": "^1.4.0",
    "npm": "^6.0.0",
    "p-cancelable": "^0.4.1",
    "p-queue": "^2.4.2",
    "prop-types": "^15.6.1",
    "react-draggable": "^3.0.5",
    "tempy": "^0.2.1",
    "tmp": "^0.0.33",
    "unstated": "^1.2.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "electron": "^2.0.0",
    "electron-builder": "^20.8.1",
    "eslint-config-xo-react": "^0.16.0",
    "eslint-plugin-react": "^7.7.0",
    "next": "^4.2.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "xo": "^0.20.3"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "space": 2,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/named": 0,
      "import/default": 0,
      "no-use-before-define": 0,
      "react/jsx-no-bind": 0,
      "react/jsx-closing-tag-location": 0,
      "react/require-default-props": 0,
      "capitalized-comments": 0,
      "react/no-unused-prop-types": 0,
      "react/no-access-state-in-setstate": 0,
      "react/jsx-curly-brace-presence": 0
    },
    "ignores": [
      "dist",
      "renderer/.next",
      "renderer/out"
    ]
  },
  "build": {
    "appId": "com.wulkano.kap",
    "files": [
      "**/*",
      "!renderer",
      "renderer/out"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.12.0"
    },
    "dmg": {
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
