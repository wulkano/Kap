{
  "repository": "wulkano/kap",
  "author": "Wulkano AS <team@wulka.no> (https://wulka.no/)",
  "license": "MIT",
  "scripts": {
    "test": "xo",
    "build": "npm run test && webpack",
    "dev": "webpack --watch",
    "app": "electron app/dist/main.js",
    "start": "npm run app",
    "dist": "npm run build && build",
    "pack": "npm run build && build --dir",
    "postinstall": "install-app-deps && npm run ffmpeg && npm run electron",
    "prepush": "npm run test",
    "ffmpeg": "node scripts/download-ffmpeg.js",
    "electron": "node scripts/download-electron.js"
  },
  "devDependencies": {
    "app-root-path": "^2.0.1",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-es2015-modules-commonjs": "6.16.0",
    "babel-preset-react": "^6.22.0",
    "chalk": "1.1.3",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "cssnano": "3.7.7",
    "del": "2.2.2",
    "eightpoint": "0.0.1",
    "electron": "1.4.8",
    "electron-builder": "7.11.4",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-react": "^6.9.0",
    "execa": "0.5.0",
    "got": "6.5.0",
    "html-webpack-plugin": "^2.28.0",
    "husky": "0.11.9",
    "ora": "0.3.0",
    "postcss-extend": "1.0.5",
    "postcss-import": "9.1.0",
    "postcss-loader": "^1.2.2",
    "postcss-nested": "1.0.0",
    "postcss-reporter": "2.0.0",
    "postcss-simple-vars": "3.0.0",
    "react": "^15.4.2",
    "webpack": "2.2.0",
    "webpack-livereload-plugin": "^0.10.0",
    "webpack-shell-plugin": "^0.5.0",
    "xo": "0.17.0"
  },
  "xo": {
    "space": 2,
    "semicolon": false,
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/named": 0,
      "import/default": 0,
      "unicorn/filename-case": 0
    },
    "ignores": [
      "app/dist/**"
    ],
    "extends": "xo-react"
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-simple-vars": {},
      "postcss-extend": {},
      "postcss-nested": {},
      "cssnano": {},
      "postcss-reporter": {}
    }
  },
  "build": {
    "asar": false,
    "appId": "com.wulkano.kap",
    "category": "public.app-category.productivity",
    "files": [
      "**/*",
      "!src",
      "!vendor/**"
    ],
    "electronDist": "node_modules/electron/dist"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs",
      "styled-jsx/babel"
    ],
    "presets": [
      "react"
    ]
  },
  "dependencies": {
    "styled-jsx": "^0.5.3"
  }
}
