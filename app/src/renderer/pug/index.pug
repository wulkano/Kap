doctype html
html(lang='en')
  head
    meta(charset="UTF-8")
    title Kap
    link(href='../css/style.css', rel='stylesheet', type='text/css')
    script(src="../js/index.js")
    script(src='../js/disable-zoom.js')

  body
    //- Arrow pointing to the tray when Kap is underneath the tray icon
    .tray-arrow

    //- App content wrapper
    main.content

      //- Title Bar
      .title-bar
        .title-bar__controls.invisible
          img.hide-window(src='/app/static/traffic-light-close.svg')
          img.minimize-window(src='/app/static/traffic-light-minimize.svg')
          img(src='/app/static/traffic-light-disabled.svg')
        span.window__title.txt Kap
        .update-notification.hidden
          span An update is available!
          ul
            li
              img.open-release-notes(src='/app/static/info.svg')
            li
              img.restart-and-install-update(src='/app/static/refresh.svg')

      //- Progress bar
      section.progress.hidden
        progress#progress-bar.progress-bar(max='100')
        label.progress-bar-label.txt(for='progress-bar') Analyzing...

      //- Main App area/header (record button container)
      header.kap-header
        .kap-header__text.time.txt 00:00
        .record(data-state='initial')
          img.record__crop(src='/app/static/crop.svg')
          img.record__stop.hidden(src='/app/static/stop.svg')
        .kap-header__text.size.txt 0 kB

      //- Kap Controls
      section.controls.dark
        .controls__toggle.container
          img.triangle(src='/app/static/dropdown-arrow.svg')
          span.controls__title.txt Controls
          img.controls__options(src='/app/static/gear.svg')

        .controls-content.hidden
          .controls-section.container
            span.controls-section__title.txt Aspect ratio
            .controls-section__row
              .select-element
                select.aspect-ratio-selector
                  option(value='1600x900') 16:9 (1600x900)
                  option(value='1280x1024') 5:4 (1280x1024)
                  option(value='1024x768') 4:3 (1024x768)
                  option(value='512x512', selected='selected') 1:1 (512x512)
                  option(data-aspect-ratio='custom') Custom
            .controls-section__row.aspect-ratio
              .aspect-ratio__input
                label.txt(for='aspect-ratio-width') Width
                input#aspect-ratio-width(type='text', value='512')
              .button-group.aspect-ratio__options
                button
                  img.swap-btn(src='/app/static/swap.svg')
                button
                  img.link-btn(src='/app/static/link.svg')
              .aspect-ratio__input
                label.txt(for='aspect-ratio-height') Height
                input#aspect-ratio-height(type='text', value='512')
          .controls-section.container
            //- TODO remove this `style`ðŸ‘‡
            span.controls-section__title.txt Export as
            .controls-section__row
              .select-element
                select#export-as
                  option(value='gif') GIF
                  option(value='mp4') MP4
